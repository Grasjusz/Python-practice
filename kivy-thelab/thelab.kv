AnchorLayoutExample:

<AnchorLayoutExample>:
    anchor_x: "center"
    anchor_y: "top"
    BoxLayout:
        size_hint: .5, .5
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "One"
        size_hint: .5, .5
        # size: "100dp", "60dp"
        # width: "100dp"
        # height: "50dp"
        pos_hint: {"center_y": .5}

    BoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        Button:
            text: "Button Two"
        Button:
            text: "Button Three"
        Button:
            text: "Button Four"
        Button:
            text: "Button Five"

    Label:
        text: "Three"

<MainWidget>:
    Button:
        text: "Hello noob"
        size: "100dp", "100dp"
        pos:  "250dp", "250dp"
        color: 0, 0, 2, 1
    Label:
        text: "Hello no noob"
        size: "100dp", "100dp"
        pos:  "150dp", "150dp"
        color: 1, 0, 0, 1