BoxLayoutExample:

<PageLayoutExample@PageLayout>:
    MainWidget:
    BoxLayoutExample:
    AnchorLayoutExample:
    GridLayoutExample:

<StackLayoutExample>:
    #orientation: "rl-bt"
    #padding: ("20dp", "20dp", "20dp", "20dp")
    #spacing: "20dp", "20dp"

<GridLayoutExample@GridLayout>:
    #cols: 4
    rows: 2
    Button:
        text: "A"
        size_hint: None, 1
        width: "60dp"
    BoxLayoutExample:
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, 1
        width: "60dp"
    Button:
        text: "E"
    Button:
        text: "F"

<AnchorLayoutExample>:
    anchor_x: "center"
    anchor_y: "top"
    BoxLayout:
        size_hint: .5, .5
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: "Choose your number or go with IT"
        size_hint: .8, .5
        # size: "100dp", "60dp"
        # width: "100dp"
        # height: "50dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        spacing: "20dp"

    BoxLayout:
        orientation: "horizontal"
        spacing: "20dp"
        Button:
            text: "Button Two"
        Button:
            text: "Button Three"
        Button:
            text: "Button Four"
        Button:
            text: "Button Five"

    Label:
        text: "Three"

<MainWidget>:
    Button:
        text: "Hello noob"
        size: "100dp", "100dp"
        pos:  "250dp", "250dp"
        color: 0, 0, 2, 1
    Label:
        text: "Hello no noob"
        size: "100dp", "100dp"
        pos:  "150dp", "150dp"
        color: 1, 0, 0, 1